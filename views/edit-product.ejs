<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <title>Document</title>
</head>
<body>
  <%- include('partials/nav') %>
  <div class="container">
    <h1 class="text-center mt-3"> Add product</h1>
    <form action="/product/<%= product.id %>/edit" method="post">
      <div class="row justify-content-center">
        <div class="mb-3 mb-md-0">
          <div id="basic" class="form-outline">
            <label for="exampleInput" class="form-label">Product name</label>
            <input type="text" class="form-control" id="exampleInput" name="name" value="<%= product.name %>">
          </div>
        </div>
        <div class="mt-3">
          <label for="formGroupExampleInput" class="form-label">Description</label>
          <textarea class="form-control" id="floatingTextarea" name="description"><%= product.description %></textarea>
        </div>
      </div>
      <div class="mt-3"> 
        <label class="form-label" for="number">Price</label>
        <input class="form-control" id="number" name="price" type="number" value="<%= product.price %>"/>
      </div>
        <label for="education" class="mt-3 md-3">Category:</label><br>
        <select class="form-select" aria-label="Default select example" name="CategoryId">
          <option value="" disabled>--Category--</option>
          <% category.forEach(e => { %>
            <option value="<%= e.id %>" <% (category.name === e.name)? 'selected':"" %>>
               <%= e.name %>
          </option>
        <% }) %>
      </select>
      <div class="mt-3">
        <label for="formGroupExampleInput" class="form-label">imageURL</label>
        <input type="text" class="form-control" id="formGroupExampleInput" name="imageURL" value="<%= product.imageURL %>">
      </div>
      <input class="btn btn-primary mt-3" type="submit" value="Add Product">
    </form>
  </div>
  <%- include('partials/javascript') %>
</body>
</html>